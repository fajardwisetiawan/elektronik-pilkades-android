<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LoginAct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@color/white"
        android:padding="16dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginBottom="@dimen/dp_24"
                    android:layout_gravity="center"
                    android:src="@drawable/banyumas"
                    android:layout_width="250dp"
                    android:layout_height="150dp"/>
                <TextView
                    android:layout_marginTop="24dp"
                    android:textColor="@color/black_tua_hehe"
                    android:textSize="20sp"
                    android:layout_marginBottom="4dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selamat Datang!"/>
                <TextView
                    android:textColor="@color/black_tua_hehe"
                    android:textSize="14sp"
                    android:layout_marginBottom="32dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Silahkan login terlebih dahulu untuk dapat melakukan Pemilihan Kepala Desa"/>
                <TextView
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nomor Induk Kependudukan"/>
                <EditText
                    android:id="@+id/etNikLogin"
                    android:inputType="number"
                    android:paddingLeft="@dimen/dp_8"
                    android:background="@drawable/edittext_field"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"/>
                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"/>
                <EditText
                    android:paddingLeft="@dimen/dp_8"
                    android:id="@+id/etPassword"
                    android:inputType="text"
                    android:background="@drawable/edittext_field"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

                <Button
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:id="@+id/btnLogin"
                    android:background="@drawable/button_bg"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="Login"
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</ScrollView>